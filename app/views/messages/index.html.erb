<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<%= form_for(@message) do |f| %>
  <div class="form-group">
    <label for="message_name" class="control-label">名前</label>
    <%#= f.label :name, "名前", class: "control-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
  </div>
  
  <div class="form-group">
    <label for="message_body" class="control-label">内容</label>
    <%= f.text_area :body, class: "form-control", placeholder: "内容をこちらに記載してください。" %>
  </div>
  
  <div class="form-group">
    <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
<% end %>