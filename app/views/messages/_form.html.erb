<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="message_name" class="control-label">名前</label>
    <%#= f.label :name, "名前", class: "control-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
  </div>
  
  <div class="form-group">
    <label for="message_age" class="control-label">年齢</label>
    <%#= f.label :age, "年齢", class: "control-label" %>
    <%= f.text_field :age, class: "form-control", placeholder: "年齢" %>
  </div>
  
  <div class="form-group">
    <label for="message_body" class="control-label">内容</label>
    <%= f.text_area :body, class: "form-control", placeholder: "内容をこちらに記載してください。" %>
  </div>
  
  <div class="form-group">
    <%= f.submit "送信する", class: "btn btn-sm btn-primary" %>
  </div>
  
<% end %>
